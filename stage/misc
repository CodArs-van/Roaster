FROM docker.codingcafe.org/sandbox/centos:stage-llvm-clang

COPY [".", "/etc/codingcafe/scripts"]

RUN cp -f /etc/hosts /tmp && echo 10.0.0.10 {git,proxy,repo}.codingcafe.org > /etc/hosts && /etc/codingcafe/scripts/setup.sh ompi cuda boost jemalloc openblas opencv gflags glog protobuf leveldb lmdb rocksdb && cat /tmp/hosts > /etc/hosts && rm -f /tmp/hosts
