FROM centos/systemd

SHELL ["/bin/bash", "-c"]

ENV PATH /usr/local/nvidia/bin:/usr/local/cuda/bin:${PATH}
ENV LD_LIBRARY_PATH /usr/local/nvidia/lib64:/usr/local/nvidia/lib:${LD_LIBRARY_PATH}
ENV NVIDIA_VISIBLE_DEVICES all

ADD ["setup.sh", "/etc/codingcafe/"]
ADD ["cache.repo", "/etc/yum.repos.d/"]
VOLUME ["/var/log"]

RUN cp -f /etc/hosts /tmp && echo 10.0.0.10 {git,proxy,repo}.codingcafe.org > /etc/hosts && /etc/codingcafe/setup.sh repo pkg auth cuda slurm ompi nagios && cat /tmp/hosts > /etc/hosts && rm -f /tmp/hosts
