FROM docker.codingcafe.org/sandbox/centos:stage-init

COPY ["setup.sh", "/etc/codingcafe/"]
COPY ["pkgs", "/etc/codingcafe/pkgs"]

COPY ["cache.repo", "/etc/yum.repos.d/"]

RUN cp -f /etc/hosts /tmp && echo 10.0.0.10 {git,proxy,repo}.codingcafe.org > /etc/hosts && /etc/codingcafe/setup.sh repo && cat /tmp/hosts > /etc/hosts && rm -f /tmp/hosts
