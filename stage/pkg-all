FROM docker.codingcafe.org/sandbox/centos:stage-pkg-skip

ADD ["setup.sh", "/etc/codingcafe/"]
ADD ["pkgs", "/etc/codingcafe/pkgs"]

RUN cp -f /etc/hosts /tmp && echo 10.0.0.10 {git,proxy,repo}.codingcafe.org > /etc/hosts && /etc/codingcafe/setup.sh pkg-all auth cuda slurm ompi nagios && cat /tmp/hosts > /etc/hosts && rm -f /tmp/hosts
